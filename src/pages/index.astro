<Layout title="Sunlight">
  <main>
    <img class="pulsate-bck" src="/logo.svg" />
  </main>
</Layout>

<style>
  main {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  img {
    width: 300px;
  }

